<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render 'profiles/profile', metadata_profile: @metadata_profile %>
    <hr class="my-4">
    <div class="flex justify-between items-center space-x-4">
      <%= link_to 'Edit this metadata_profile', edit_account_profile_path(@account, @metadata_profile.id.to_s), class: "btn btn-primary" %>
      <%= button_to 'Destroy this metadata_profile', account_profile_path(@account, @metadata_profile.id.to_s), method: :delete, class: "btn btn-secondary" %>
      <%= link_to 'Back to profiles', account_profiles_path(@account), class: "btn btn-danger" %>
    </div>
  </div>
</div>