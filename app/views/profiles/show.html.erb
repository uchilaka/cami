<div class="mx-auto sm:w-9/12 md:w-6/12 w-full">
  <h1 class="font-bold text-4xl">Profile</h1>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render 'profiles/profile', metadata_profile: @metadata_profile %>

  <hr class="my-4">
  <div class="flex justify-end items-start">
    <%= link_to 'Back to profiles', account_profiles_path(@account), class: 'px-5 py-2.5 hover:underline' %>
    <%= button_to 'Delete', account_profile_path(@account, @metadata_profile.id.to_s), method: :delete, class: secondary_btn_classes('px-5 py-2.5', style: :danger) %>
    <%= yield :profile_form_actions %>
  </div>
</div>