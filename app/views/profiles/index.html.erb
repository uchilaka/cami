<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Profiles</h1>
    <%= link_to 'New profile', new_account_profile_path(@account), class: "btn btn-primary" %>
  </div>

  <div id="metadata_profiles" class="min-w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    <% @profiles.each do |metadata_profile| %>
      <%= render 'profiles/profile', metadata_profile: %>
    <% end %>
  </div>
</div>